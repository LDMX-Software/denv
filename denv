denv_version=0.0.0

# POSIX
set -o errexit
set -o nounset

# create a new dev box
denv-create() {
  if command -v apptainer; then
    apptainer build NAME.sif docker://IMAGE
  elif command -v singularity; then
    singularity build NAME.sif docker://IMAGE
  elif command -v podman; then
    podman create --name NAME IMAGE
  elif command -v docker; then
    docker create --name NAME IMAGE
  else
    echo "ERROR: A supported container runner is not installed."
  fi
}

# enter a dev box
denv-enter() {
  apptainer run \
    --home HOME \
    --env "PS1=${PS1}" \
    --hostname NAME.$(uname -n) \
    /bin/bash -i

  singularity run \
    --home HOME \
    --env "PS1=${PS1}" \
    --hostname NAME.$(uname -n) \
    /bin/bash -i

  podman run \
    --home HOME
    --env "PS1=${PS1}" \
    --hostname NAME.$(uname -n) \
    /bin/bash -i

  docker run \
    --home HOME
    --env "PS1=${PS1}" \
    --hostname NAME.$(uname -n) \
    /bin/bash -i
}

# run the input command in the box
denv-run() {
  denv-enter -- $@
}

# print a help
denv-help() {
}

case $1 in
  create|enter|run|help)
    denv-${1} ${@:2}
    exit $?
    ;;
  *)
    denv-${DBX_DEFAULT:-run} $@
    exit $?
    ;;
esac
